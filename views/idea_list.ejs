<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">My Ideas</h1>
            <p class="text-gray-600">Track and manage your SaaS idea analyses</p>
        </div>
        <a href="/" class="btn-primary mt-4 sm:mt-0">
            + New Idea
        </a>
    </div>

    <!-- Filter Tabs -->
    <div class="flex space-x-1 bg-gray-100 rounded-lg p-1 mb-6">
        <button class="filter-tab active" data-status="all">All Ideas</button>
        <button class="filter-tab" data-status="analyzed">Analyzed</button>
        <button class="filter-tab" data-status="pending">Pending</button>
        <button class="filter-tab" data-status="archived">Archived</button>
    </div>

    <!-- Ideas Container -->
    <div id="ideasContainer" class="space-y-4">
        <!-- Loading state -->
        <div id="loadingState" class="text-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
            <p class="text-gray-600">Loading your ideas...</p>
        </div>

        <!-- Empty state -->
        <div id="emptyState" class="text-center py-12 hidden">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl">ðŸ’¡</span>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No ideas yet</h3>
            <p class="text-gray-600 mb-4">Start by submitting your first SaaS idea for analysis.</p>
            <a href="/" class="btn-primary">Submit First Idea</a>
        </div>

        <!-- Ideas will be populated here -->
    </div>
</div>

<!-- Idea Card Template -->
<template id="ideaCardTemplate">
    <div class="card hover:shadow-md transition-shadow cursor-pointer" data-idea-id="">
        <div class="flex items-start justify-between mb-4">
            <div class="flex-1 min-w-0">
                <h3 class="font-semibold text-gray-900 truncate mb-1 idea-title"></h3>
                <p class="text-sm text-gray-600 idea-preview"></p>
            </div>
            <div class="ml-4 flex-shrink-0">
                <span class="status-badge"></span>
            </div>
        </div>

        <!-- Analysis Preview (shown only for analyzed ideas) -->
        <div class="analysis-preview hidden">
            <div class="flex items-center space-x-4 mb-3">
                <div class="flex items-center">
                    <span class="score-badge"></span>
                    <span class="ml-2 text-sm text-gray-600">Viability Score</span>
                </div>
                <div class="flex items-center">
                    <span class="recommendation-badge"></span>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="font-medium text-gray-700">Problem:</span>
                    <p class="text-gray-600 truncate problem-text"></p>
                </div>
                <div>
                    <span class="font-medium text-gray-700">Audience:</span>
                    <p class="text-gray-600 truncate audience-text"></p>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-between mt-4 pt-4 border-t">
            <span class="text-sm text-gray-500 idea-date"></span>
            <div class="flex space-x-2">
                <button class="analyze-btn hidden text-sm text-blue-600 hover:text-blue-700 font-medium">
                    Analyze
                </button>
                <button class="archive-btn text-sm text-gray-500 hover:text-gray-700">
                    Archive
                </button>
            </div>
        </div>
    </div>
</template>


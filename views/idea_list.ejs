<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-12">
        <div>
            <div class="flex items-center space-x-3 mb-2">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg">
                    <span class="text-2xl">💡</span>
                </div>
                <div>
                    <h1 class="text-4xl font-bold text-gray-900 mb-1">My Ideas</h1>
                    <p class="text-lg text-gray-600">Track and manage your SaaS idea analyses</p>
                </div>
            </div>
        </div>
        <a href="/" class="btn btn-primary mt-4 sm:mt-0 flex items-center space-x-2 group">
            <span class="text-xl group-hover:rotate-90 transition-transform duration-300">+</span>
            <span>New Idea</span>
        </a>
    </div>

    <!-- Filter Tabs -->
    <div class="bg-white rounded-2xl p-2 mb-8 shadow-lg border border-gray-100">
        <div class="flex space-x-2">
            <button class="filter-tab active flex-1" data-status="all">
                <span class="flex items-center justify-center space-x-2">
                    <span>📋</span>
                    <span>All Ideas</span>
                </span>
            </button>
            <button class="filter-tab flex-1" data-status="analyzed">
                <span class="flex items-center justify-center space-x-2">
                    <span>✅</span>
                    <span>Analyzed</span>
                </span>
            </button>
            <button class="filter-tab flex-1" data-status="pending">
                <span class="flex items-center justify-center space-x-2">
                    <span>⏳</span>
                    <span>Pending</span>
                </span>
            </button>
            <button class="filter-tab flex-1" data-status="archived">
                <span class="flex items-center justify-center space-x-2">
                    <span>📦</span>
                    <span>Archived</span>
                </span>
            </button>
        </div>
    </div>

    <!-- Ideas Container -->
    <div id="ideasContainer" class="space-y-6">
        <!-- Loading state -->
        <div id="loadingState" class="text-center py-16">
            <div class="relative">
                <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-200 border-t-blue-600 mx-auto mb-6"></div>
                <div class="w-4 h-4 bg-blue-500 rounded-full absolute top-6 left-1/2 transform -translate-x-1/2 animate-pulse"></div>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Loading your ideas...</h3>
            <p class="text-gray-600">Please wait while we fetch your saved ideas</p>
        </div>

        <!-- Empty state -->
        <div id="emptyState" class="text-center py-16 hidden">
            <div class="w-24 h-24 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-lg">
                <span class="text-5xl">💡</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">No ideas yet</h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto">Start by submitting your first SaaS idea for analysis. Our AI will provide comprehensive market insights and recommendations.</p>
            <a href="/" class="btn btn-primary inline-flex items-center space-x-2 px-8 py-4 text-lg group">
                <span class="text-2xl group-hover:rotate-90 transition-transform duration-300">+</span>
                <span>Submit First Idea</span>
            </a>
        </div>

        <!-- Ideas will be populated here -->
    </div>
</div>

<!-- Idea Card Template -->
<template id="ideaCardTemplate">
    <div class="card hover:shadow-2xl transition-all duration-300 cursor-pointer group" data-idea-id="">
        <div class="flex items-start justify-between mb-4">
            <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3 mb-2">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                        <span class="text-lg">💡</span>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900 truncate text-lg mb-1 idea-title"></h3>
                        <div class="flex items-center space-x-2">
                            <span class="status-badge"></span>
                            <span class="text-sm text-gray-500 idea-date"></span>
                        </div>
                    </div>
                </div>
                <p class="text-gray-600 idea-preview leading-relaxed"></p>
            </div>
        </div>

        <!-- Analysis Preview (shown only for analyzed ideas) -->
        <div class="analysis-preview hidden bg-gradient-to-r from-gray-50 to-blue-50 rounded-xl p-4 border border-blue-100">
            <div class="flex items-center justify-between mb-3">
                <div class="flex items-center space-x-3">
                    <span class="score-badge"></span>
                    <span class="text-sm text-gray-600 font-medium">Viability Score</span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="recommendation-badge"></span>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div class="bg-white/70 rounded-lg p-3">
                    <span class="font-semibold text-gray-700 flex items-center space-x-1">
                        <span>🎯</span>
                        <span>Problem:</span>
                    </span>
                    <p class="text-gray-600 truncate problem-text mt-1"></p>
                </div>
                <div class="bg-white/70 rounded-lg p-3">
                    <span class="font-semibold text-gray-700 flex items-center space-x-1">
                        <span>👥</span>
                        <span>Audience:</span>
                    </span>
                    <p class="text-gray-600 truncate audience-text mt-1"></p>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-between mt-6 pt-4 border-t border-gray-100">
            <div class="flex space-x-2">
                <button class="analyze-btn hidden btn btn-secondary">
                    <span>🔍</span>
                    <span>Analyze</span>
                </button>
            </div>
            <button class="archive-btn text-gray-500 hover:text-red-600 hover:bg-red-50 px-3 py-2 rounded-lg text-sm font-medium transition-colors flex items-center space-x-1">
                <span>📦</span>
                <span>Archive</span>
            </button>
        </div>
    </div>
</template>
